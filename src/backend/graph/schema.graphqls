# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Series {
  id: ID!
  name: String!
}



type TVDBSeriesSummary {
  airedEpisodes: String!
  airedSeasons: [String]!
  dvdEpisodes: String!
  dvdSeasons: [String]!
}

type TVDBSeries {
  added: String!
  addedBy: Int!
  airsDayOfWeek: String!
  airsTime: String!
  aliases: [String]!
  banner: String!
  firstAired: String!
  genre: [String]
  id: ID!
  imdbId: String!
  lastUpdated: Int!
  network: String!
  networkID: String!
  overview: String!
  rating: String!
  runtime: String!
  seriesId: String!
  seriesName: String!
  siteRating: Float!
  siteRatingCount: Int!
  status: String!
  zap2itId: String!

  summary: TVDBSeriesSummary!
}

type Query {
  series: [Series]!
  tvdbSeriesSearch(term: String!): [TVDBSeries]!
}

